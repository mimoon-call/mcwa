# AWS Configuration
aws_region = "us-east-1"

# Project Configuration
project_name = "react-ssr-app"
environment  = "production"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"
availability_zones = [
  "us-east-1a",
  "us-east-1b"
]
private_subnet_cidrs = [
  "10.0.1.0/24",
  "10.0.2.0/24"
]
public_subnet_cidrs = [
  "10.0.101.0/24",
  "10.0.102.0/24"
]

# ECS Configuration
task_cpu              = 256
task_memory           = 512
app_port              = 3000
service_desired_count = 2

# Domain Configuration (Optional - leave empty for ALB default domain)
domain_name           = ""
cloudfront_domain_name = "" 